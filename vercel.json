{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/api" },
    { "src": "^/swaps$", "dest": "/api/swaps" },
    { "src": "^/rankings$", "dest": "/api/rankings" },
    { "src": "^/health$", "dest": "/api/health" },
    {
      "src": "^/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Expose-Headers": "X-PAYMENT,X-PAYMENT-RESPONSE,PAYMENT-REQUIRED,PAYMENT-RESPONSE"
      },
      "continue": true
    }
  ]
}
